#!/bin/bash

set -e

TEMP=`getopt -o "" --long prefix: -n "$0" -- "$@"`

if [ $? != 0 ]; then exit 1; fi

eval set -- "$TEMP"

PREFIX=/usr/lib

while true ; do
    case "$1" in
        --prefix) PREFIX=$2; shift 2;;
        --) shift; break;;
    esac
done

git submodule update --init
./submodules/rust-phf/configure
./submodules/rust-openssl/configure

sed -e "s|%PREFIX%|$PREFIX|" \
    < Makefile.in > Makefile
